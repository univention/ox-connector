[OX_SOAP_SERVER]
Description = The server where Open-Xchange is installed
Description[de] = Der Server, auf dem Open-Xchange installiert ist
Show = Install, Settings
Type = String
Required = True
InitialValue = https://@%@hostname@%@.@%@domainname@%@

[OX_IMAP_SERVER]
Description = Default IMAP server for new users (if not set explicitely there)
Description[de] = Standard-IMAP-Server für neue Benutzer (falls nicht dort explizit gesetzt)
Show = Install, Settings
Type = String
Required = True
InitialValue = imap://@%@hostname@%@.@%@domainname@%@:143

[OX_SMTP_SERVER]
Description = Default SMTP server for new users (if not set explicitely there)
Description[de] = Standard-SMTP-Server für neue Benutzer (falls nicht dort explizit gesetzt)
Show = Install, Settings
Type = String
Required = True
InitialValue = smtp://@%@hostname@%@.@%@domainname@%@:587

[DEFAULT_CONTEXT]
Description = Default context for users (has to exist)
Description[de] = Standard-Kontext für Benutzer (muss bereits existieren)
Show = Install, Settings
Type = Int
Required = True
InitialValue = 10

[OX_LANGUAGE]
Description = Default language for new users
Description[de] = Standardsprache für neue Benutzer
Show = Install, Settings
Type = String
Required = True
InitialValue = de_DE

[LOCAL_TIMEZONE]
Description = Default timezone for new users
Description[de] = Standardzeitzone für neue Benutzer
Show = Install, Settings
Type = String
Required = True
InitialValue = Europe/Berlin

[OX_MASTER_ADMIN]
Description = OX Admin username (the OX Admin can create, modify, delete contexts; has to exist)
Description[de] = OX Admin-Benutzername (ein OX Admin kann Kontexte anlegen, modifizieren, löschen; muss bereits existieren)
Show = Install, Settings
Type = String
Required = True
InitialValue = oxadminmaster

[OX_MASTER_PASSWORD]
Description = OX Admin password
Description[de] = OX Admin-Passwort
Show = Install, Settings
Type = Password
Required = False

[OX_IMAP_LOGIN]
Description = imapLogin field that is used by OX to log in to the user's inbox. If this value is empty it is set to the user's mail address.
Description[de] = imapLogin-Feld, welches von OX verwendet wird, um sich beim Posteingang des Benutzers anzumelden. Wenn dieser Wert leer ist, wird er auf die E-Mail-Adresse des Benutzers gesetzt.
Show = Install, Settings
Type = String
Required = False

[OX_FUNCTIONAL_ACCOUNT_LOGIN_TEMPLATE]
Description = Template to format the functional account login field. All specified values used in this template must be enclosed by "{{ }}" e.g "{{fa_entry_uuid}}{{username}}". Multiple values can optionally be separated by any of the characters ":;+". The functional account entry-uuid ('fa_entry_uuid') has to always be included and any udm property of OX users (including their entry_uuid and dn) can optionally be added.
Description[de] = Template welches den Wert für das Login-Feld von Funktionspostfächern setzt. Jeder angegebene Wert muss mit "{{ }}" umschlossen werden (z.B. "{{fa_entry_uuid}}{{username}}"). Bei mehreren Werten können optional die Zeichen ":;+" als Separator verwendet werden. Die Funktionspostfach-Entry-Uuid ('fa_entry_uuid') muss immer angegeben werden. Diese kann darüber hinaus mit beliebigen OX-User-UDM-Properties erweitert werden (inkl. derer entry_uuid und DN).
Show = Install, Settings
Type = String
Required = False
