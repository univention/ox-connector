[OX_SOAP_SERVER]
Description = The server where Open-Xchange is installed
Description[de] = Der Server, auf dem Open-Xchange installiert ist
Show = Install, Settings
Type = String
Required = True
InitialValue = https://@%@hostname@%@.@%@domainname@%@

[OX_IMAP_SERVER]
Description = Default IMAP server for new users (if not set explicitely there)
Description[de] = Standard-IMAP-Server für neue Benutzer (falls nicht dort explizit gesetzt)
Show = Install, Settings
Type = String
Required = True
InitialValue = imap://@%@hostname@%@.@%@domainname@%@:143

[OX_SMTP_SERVER]
Description = Default SMTP server for new users (if not set explicitely there)
Description[de] = Standard-SMTP-Server für neue Benutzer (falls nicht dort explizit gesetzt)
Show = Install, Settings
Type = String
Required = True
InitialValue = smtp://@%@hostname@%@.@%@domainname@%@:587

[DEFAULT_CONTEXT]
Description = Default context for users (has to exist)
Description[de] = Standard-Kontext für Benutzer (muss bereits existieren)
Show = Install, Settings
Type = Int
Required = True
InitialValue = 10

[OX_LANGUAGE]
Description = Default language for new users
Description[de] = Standardsprache für neue Benutzer
Show = Install, Settings
Type = String
Required = True
InitialValue = de_DE

[LOCAL_TIMEZONE]
Description = Default timezone for new users
Description[de] = Standardzeitzone für neue Benutzer
Show = Install, Settings
Type = String
Required = True
InitialValue = Europe/Berlin

[OX_MASTER_ADMIN]
Description = OX Admin username (the OX Admin can create, modify, delete contexts; has to exist)
Description[de] = OX Admin-Benutzername (ein OX Admin kann Kontexte anlegen, modifizieren, löschen; muss bereits existieren)
Show = Install, Settings
Type = String
Required = True
InitialValue = oxadminmaster

[OX_MASTER_PASSWORD]
Description = OX Admin password
Description[de] = OX Admin-Passwort
Show = Install, Settings
Type = Password
Required = False

[OX_IMAP_LOGIN]
Description = imapLogin field that is used by OX to log in to the user's inbox. If this value is empty it is set to the user's mail address.
Description[de] = imapLogin-Feld, welches von OX verwendet wird, um sich beim Posteingang des Benutzers anzumelden. Wenn dieser Wert leer ist, wird er auf die E-Mail-Adresse des Benutzers gesetzt.
Show = Install, Settings
Type = String
Required = False

[OX_FUNCTIONAL_ACCOUNT_LOGIN_TEMPLATE]
Description = Customizes the functional account login field format using templates. You can use plain text or incorporate UDM properties, which have to be enclosed within double curly braces, such as '{{fa_entry_uuid}}{{username}}'." For more details, please refer to the <a target="_blank" href="https://docs.software-univention.de/ox-connector-app/latest/configuration.html#envvar-OX_FUNCTIONAL_ACCOUNT_LOGIN_TEMPLATE">ox-connector manual</a>.
Description[de] = Formatvorgabe für das Login-Feld von Funktionspostfächern mit Hilfe von Templates. Gültige Werte sind einfacher Text und UDM-Properties. UDM-Properties müssen mit "{{ }}" umschlossen werden (z.B. "{{fa_entry_uuid}}{{username}}"). Weitere Einzelheiten können der <a target="_blank" href="https://docs.software-univention.de/ox-connector-app/latest/configuration.html#envvar-OX_FUNCTIONAL_ACCOUNT_LOGIN_TEMPLATE">OX-Connector-Dokumentation</a> entnommen werden.
Show = Install, Settings
Type = String
Required = False

[OX_USER_IDENTIFIER]
Description = UDM user property that is used as the unique user identifier for OX. Default: "username".
Description[de] = UDM-User-Property, die als eindeutiger User-Identifier für OX verwendet wird. Default: "username".
Show = Install, Settings
Type = String
Required = False

[OX_GROUP_IDENTIFIER]
Description = UDM group property that is used as the unique group identifier for OX. Default: "name".
Description[de] = UDM-Group-Property, die als eindeutiger Group-Identifier für OX verwendet wird. Default: "name".
Show = Install, Settings
Type = String
Required = False
